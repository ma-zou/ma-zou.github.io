.btn
    background l
    padding 14px 40px
    border-radius 30px
    color dst
    text-transform uppercase
    letter-spacing ls-b
    display inline-block

@keyframes pulse-claim
    0%
        transform translate(-50%, -50%) scale(1)
        opacity 0
    30%
        opacity 1
    70%
        opacity 1
    100%
        transform translate(-50%, -50%) scale(1.1)
        opacity 0
        
@keyframes line-reveal
    0%
        left -10px
        width 0%
        right auto
    49%
        left -10px
        width calc(100% + 20px)
        right auto
    51%
        left auto
        right -10px
        width calc(100% + 20px)
    100%
        left auto
        right -10px
        width 0%