ize(h, w = null)
    if width isnt null
        height: h
        width: w
    else
        height: h
        width: h

dark = #515151
light = #FFFFFF
colorgreen = #0AB4A9

@import url('https://fonts.googleapis.com/css?family=Manjari:100,400,700&display=swap') 

*
    margin: 0
    padding: 0
    box-sizing: border-box   

html
    font-family: Manjari
    color: dark

.base 
	background:lighten(black, 10)
	height: 644px
	width: 300px
	border-radius:32px
	margin:0 auto
	display:flex
	position: relative
	align-items: center
	justify-content: center

	.buttons-left
		position: absolute
		left:-2px
		top:104px
		div
		
		.volume
			background: black
			size(86px, 2px)
			margin-bottom: 33px
		
		.assistant
			background: black
			size(48px, 2px)
		
	.lock
		background: black
		position: absolute
		size(48px, 2px)
		right:-2px
		top:172px
	
	.front
		width: calc(100% - 4px)
		height: calc(100% - 6px)
		background: black
		border-radius: 30px
		overflow:hidden
		position: relative
		
		&:before, &:after
			content:""
			pointer-events:none
			height:100%
			width:30px
			top:0px
			position: absolute
			z-index: 100
		
		&:after
			background:linear-gradient(to right, rgba(255,255,255,0.3) 0%,rgba(125,185,232,0) 60%)
			left:0
		
		&:before
			background:linear-gradient(to left, rgba(255,255,255,0.3) 0%,rgba(125,185,232,0) 60%)
			right: 0
		
		.top
			display:flex
			align-items: center
			position: absolute
			height:30px
			width: 100%
			padding:0 43px
			
			.sensor
				border-radius: 50%
				&-tiny
					size(6px)
					background: #121a23
				
				&-large
					size(11px)
					background: #121a23
					border:solid 2px #1d1e1f
					margin:0 12px 
				
				&-large
					size(13px)
					background: #121a23
					border:solid 2px #1d1e1f
				
				&-medium
					size(10px)
					background: #121a23
					border:solid 2px #1d1e1f
					margin-right: 5px
							
			.speaker
				margin-left:23px
				margin-right:30px
				width:43px
				height: 5px
				border:solid darken(#29292a, 5) 2px
				border-radius:15px
				background: darken(#29292a, 10)
			
			.camera
				size(13px)
				border:solid 2px #1d1e1f
				border-radius:50%
				position: relative
				background: #121a23
				margin-right:30px
				&:before, &:after
					content:""
					background: rgba(#fff, 0.5)
					width:5px
					height:2px
					border-radius:50%
					position: absolute
					transform: rotate(-45deg)
					filter:blur(1px)
				
				&:before
					bottom:1px
					right:0px
				
				&:after
					top:1px
	
		.screen
			width: calc(100% - 4px)
			height: calc(100% - 55px)
			margin-top:30px
			margin-left:2px
			background: white
			position: relative
			overflow:hidden
			border-radius:28px

#app
	padding: 10px
	background: #E5E5E5
	min-height: 100%
	color: $dark
	
	img
		width: 100%
		height: auto
	
	.controls
		background: light
		border-radius: 10px
		position: absolute
		bottom: 20px
		left: 20px
		width: calc(100% - 40px)
		padding: 10px 15px 5px 15px
		display:flex
		justify-content: space-between
		
		button
			border:none
			background: none
			display:block
			padding: 0
			color: $rain
			
			i
			    font-size: 40px

	.playstate
        display:flex
        flex-flow: row wrap
        align-items: center

        #time-played, #time-length
            margin-top 15px
            display: inline-block;
            margin-left 10px

        .timeline
            width: 123%
            position: absolute
            right: 11px
            top: 120px
            display: block
            transform-origin: 0% 352px
            transform rotate(90deg) scaleX(-1)

            svg 
                width: 100%
                overflow: hidden
                height: 100px
                position absolute
                
                *
                    width: 100%
                    height: 100%
                    display: block

                path
                    position absolute
                    stroke: dark
                    
                &#controller
                    width: 0%
                    transition all 300ms linear

                    path
                        stroke: colorgreen

            .progress
                width: 100%
                height: 100px
                position absolute
                background: colorgreen
			
	#song-data
		margin-top: 15px

		p
			margin-bottom: 30px

			span
				display:block

				&.title
                    font-size 26px
                    font-weight 900
				
				&.artist
                    font-size 20px
                    font-weight 100
				
				
		.vinyl
			animation: rotate 6s linear infinite
			width: 120%
			padding-bottom: calc(120% - 8px)
			margin-left: calc(-20% - 60px)
			position: relative
			border-radius: 50%
			border:solid 5px #141414
			background: #191919
			overflow:hidden
			
			&:after
				content: ""
				width: 100%
				background: linear-gradient(145deg, #191919 30%, #393939 50%, #191919 70%)
				z-index:1
				animation: rotate reverse linear 6s infinite
				height: 100%
				position: absolute
				left: 0
				top: 0
	
			&:before
				content: ""
				width: 20px
				height: 20px
				border-radius: 50%
				background: light
				position: absolute
				left: 50%
				top: 50%
				transform: translate(-50%, -50%)
				z-index: 3
			
			.cover
				z-index: 2
				width: 50%
				height: 50%
				border:solid 3px #141414
				left: 50%
				top: 50%
				transform: translate(-50%, -50%)
				position: absolute
				border-radius: 50%
				object-fit: cover
				margin-bottom: 10px
				transition: all 300ms	

		&.paused
			.vinyl
				animation-play-state:paused

				&:after
					animation-play-state: paused
				
@keyframes rotate 
	100% 
		transform: rotate(360deg)